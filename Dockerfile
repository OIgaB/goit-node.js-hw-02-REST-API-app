FROM node:18.16.1  
# на основі якого образу створити наш

WORKDIR /app
# створює робочу директорію (пусту папку, в якій буде проєкт) та її назву

COPY . .
# копіювання файлів в цю пусту папку (крапка - звідки - з коорневої папки; крапка - куди - в корневу папку app)

RUN npm install
# ставимо всі пакети/модулі

EXPOSE 3000
# порт, на якому запускається проєкт (npm run start:dev)

CMD ["node", "server"]
# команда запуску